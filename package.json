{
  "name": "vue-spa-template",
  "description": "Vue + Vite + TypeScript + ESLint + Prettier template for single-page applications",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview --port 8080",
    "check": "vue-tsc --noEmit && eslint --ext .ts,.tsx,.vue . && prettier -cu --ignore-path .gitignore .",
    "lint": "eslint --ext .ts,.tsx,.vue .",
    "fix": "eslint --fix --ext .ts,.tsx,.vue .",
    "format": "prettier -cwu --ignore-path .gitignore ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/curegit/vue-spa-template.git"
  },
  "author": "curegit (https://github.com/curegit)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/curegit/vue-spa-template/issues"
  },
  "homepage": "https://github.com/curegit/vue-spa-template",
  "dependencies": {
    "vue": "^3.2.0",
    "vue-router": "^4.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "eslint": "^8.30.0",
    "eslint-plugin-vue": "^9.8.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.0",
    "vite": "^4.0.0",
    "vue-tsc": "^1.0.0"
  }
}
